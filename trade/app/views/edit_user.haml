-if message == "user_exists"
  .error
    Name already exists.
%h1 Edit user
%form{:action=>"/user/#{@active_user.name}/edit", :method=>"POST"}
  %label
    Display name:
  %input{:type=>"text", :name=>"display_name", :value => "#{@active_user.displayname}"}
  %br
  %label
    Image:
  %br
  %input{:type=>"file", :name=>"image"}
  %br
  %label
    List of interests:
  %br
  %textarea{:name => "interests", :style => "width:500px; height:100px"}
    #{@active_user.interests}
  %br
  %input{:type=>"submit", :class=>"button_margin", :value => "Save"}
