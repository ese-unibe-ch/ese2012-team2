- if !user.nil? #SH Only show this for an existing user
  %h1 User #{user.name}
  Credits: #{user.credits}
  %table
    %tr
      %th Name
      %th Price
      %th Image
      %th Active
    - for item in user.items
      - if item.active
        - type = 'active'
      - else
        - type = 'inactive'
      %tr{:id => "#{type}"}
        %td.list #{item.name}
        %td.list #{item.price}
        %td.list
          %img{:src =>"#{item.image_path}", :width => "200", :height => "200"}
        - if item.active
          %td.list yes
          -if user.name==session[:name] #SH If the user shown is the user who is logged in, show de-/activate button
            %td.list
              %form{:action => "/change/#{item.id}", :method => "POST"}
                %input{:type => "submit",:name => "action", :text => "deactivate", :value => "Deactivate", :id => "button"}
        - else
          %td.list no
          -if user.name==session[:name]
            %td.list
              %form{:action => "/change/#{item.id}", :method => "POST"}
                %input{:type => "submit",:name => "action", :text => "activate", :value => "Activate", :id => "button"}
