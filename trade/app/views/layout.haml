-#SH This is the layout template, doctype is html5
!!! 5
%head
  %title
    Trade
  -#SH Load css and favicon (favicon doesn't work, idk why :( )
  %link{:rel =>"stylesheet", :type =>"text/css", :href => url("style.css")}
  %link{:rel => "shortcut icon", :type=>"image/png", :href => url("favicon.png")}
%body
  #body
    -#SH Shows the logo on top of the page
    #logo
      %img{:src => url("logo.png")}
    #page
      -#SH The navigation
      #menu
        #head_entry
          %h2 Navigation
        - if session[:name]
          #menu_entry
            %a{:href => url("/")} Home
          #menu_entry
            %a{:href => url("/user/#{session[:name]}")} Your profile
          #menu_entry
            %a{:href => url("/user")} All users
          #menu_entry
            %a{:href => url("/additem")} Add Item
          #menu_entry
            %a{:href => url("/logout")} Logout
        - else
          #menu_entry
            %a{:href => url("/login")} Login
          #menu_entry
            %a{:href => url("/register")} Register
      -#SH Here are the other haml files added
      #content
        = yield