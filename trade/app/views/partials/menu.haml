      %li
        %a{:href => url("/login"), :class => [@title == "Login" && [:active_tab]]} Login
      %li
        %a{:href => url("/register"), :class => [@title == "Register" && [:active_tab]]} Register
      %li
        %a{:href => url("/reset_password"), :class => [@title == "Reset Password" && [:active_tab]]} Reset Password