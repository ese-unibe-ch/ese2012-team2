#menu
  %ul
    - if session[:name]
      %li.headlink
        %p Marketplace
        %ul
          %li.sublink
            %a{:href => url("/"), :class => [@title == "Home" && [:active_tab]]} Items
          %li.sublink
            %a{:href => url("/auctions")} Auctions
          %li.sublink
            %a{:href => url("/item_requests"), :class => [@title == "All item requests" && [:active_tab]]} Item Requests
      %li
        %a{:href => url("/user"), :class => [@title == "All users" && [:active_tab]]} User list
      %li{:class => "#{[(@title == "Add item" or @title == "Add organization") && [:active_tab]]} headlink"}
        %p Organization
        %ul
          %li.sublink
            %a{:href => url("/organizations")} Organization list
          %li.sublink
            %a{:href => url("/organization/add")} Add organization
          %li.sublink
            %a{:href => url("/user/#{@active_user.name}/requests")} Organization requests
      %li.headlink
        %p My account
        %ul
          %li.sublink
            %a{:href => url("/user/#{@active_user.name}")} My profile
          %li.sublink
            %a{:href => url("/all_items/#{@active_user.name}")} My items
          %li.sublink
            %a{:href => url("/add_item")} Add Item/Request
          %li.sublink
            %a{:href => url("/search_requests"), :class => [@title == "Subscriptions" && [:active_tab]]} Search requests
      %li
        %a{:href => url("/logout")} Logout

    - else
      %li
        %a{:href => url("/login"), :class => [@title == "Login" && [:active_tab]]} Login
      %li
        %a{:href => url("/register"), :class => [@title == "Register" && [:active_tab]]} Register