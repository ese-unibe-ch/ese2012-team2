- if activities.length > 0
  %table{:id=>"itemTable", :class=>"tablesorter pager"}
    %thead
      %tr
        %th Date
        - if show_owner
          %th Owner
        %th Activity
    - for activity in activities
      %tr
        %td.list
          #{activity.date}
        - if show_owner
          %td.list
            #{activity.owner}
        %td.list
          #{activity.description}
- else
  no Activities found