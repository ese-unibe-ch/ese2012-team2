%h1 Add new user
%form{:action=>"/register", :method=>"POST", :enctype=>"multipart/form-data"}
  %table
    %tr
      %td
        %label
        Username*:
      %td
        %input.normal_input{:type=>"text", :name=>"username"}
    %tr
      %td
        %label
        Display name*:
      %td
        %input.normal_input{:type=>"text", :name=>"display_name"}
    %tr
      %td
        %label
        Email*:
      %td
        %input.normal_input{:type=>"text", :name=>"email"}
    %tr
      %td
        %label
          Password*:
      %td
        %input.normal_input{:type=>"password", :name=>"passwd"}
    %tr
      %td
        %label
          Repeat password*:
      %td
        %input.normal_input{:type=>"password", :name=>"passwd_repetition"}

  %label
    List of interests:
  %br
  %textarea.normal_input{:name => "interests", :style => "width:500px; height:100px"}
  %br
  %label
    User image:
  %input{:type=>"file", :name=>"image"}
  %br
  %br
  %input.normal_input{:type => "submit", :value => "Register"}