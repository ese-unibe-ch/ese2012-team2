-if message == "negative_price"
  .error
    Price must be positive
-if message == "invalid_item"
  .error
    Invalid item name
-if message == "invalid_price"
  .error
    Your price is not a number
-if message == "success"
  .success
    Item edited
-#FW&MW Shows the edit item form
%h1 Edit Item
%form{:action => "/item/#{item.id}/edit", :method => "POST", :enctype=>"multipart/form-data"}
  %label
    Name*:
  %br
  %input.normal_input{:type => "text", :name => "name", :value => "#{item.name}"}
  %br
  %label
    Price*:
  %br
  %input.normal_input{:type => "text", :name => "price", :value => "#{item.price}"}
  %br
  %label
    Description:
  %br
  %textarea.normal_input{:name => "description", :style => "width:500px; height:100px"}
    #{item.description}
  %br
  %label
    Image:
  %br
  %img{:src => url("#{item.image_path}"), :width => "150px"}
  %br
  %input{:type=>"file", :name=>"image"}
  %br
  %input.normal_input{:type => "submit",:class=>"button_margin", :value => "Save"}

