%h1 Add Organization
%form{:action => "/organization/add", :method => "POST", :enctype=>"multipart/form-data"}
  %label
    Name*:
  %br
  %input.normal_input{:type => "text", :name => "name"}
  %br
  %label
    List of interests:
  %br
  %textarea.normal_input{:name => "interests", :style => "width:500px; height:100px"}
  %br
  %label
    Image:
  %br
  %input{:type=>"file", :name=>"image"}
  %br
  %input.normal_input{:type => "submit",:class=>"button_margin", :value => "Add"}