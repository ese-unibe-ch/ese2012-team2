-#SH Shows either nothing, an error or an success message
-if message == "negative_price"
  #error
    Price must be positive
-if message == "invalid_item"
  #error
    Invalid item name
-if message == "success"
  #success
    Item added
-#SH Shows the add item form
%h1 Add Item
%form(action="/additem" method="POST" enctype="multipart/form-data")
  %table
    %tr
      %td
        %label
          Name:
      %td
        %label
          Price:
    %tr
      %td
        %input(type="text" name="name")
      %td
        %input(type="text" name="price")
    %tr
      %td
        %label
          Image:
      %td
        %label
          %input(type="file" name="image")
    %tr
      %td
      %td
        %input(type="submit" text="submit")