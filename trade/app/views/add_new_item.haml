-#SH Shows the add item form
%h1 Add Item
%form{:action => "/add_item", :method => "POST", :enctype=>"multipart/form-data"}
  %label
    Name*:
  %br
  %input.normal_input{:type => "text", :name => "name"}
  %br
  %label
    Price*:
  %br
  %input.normal_input{:type => "text", :name => "price"}
  %br
  %label
    Description:
  %br
  %textarea.normal_input{:name => "description", :style => "width:500px; height:100px"}
  %br
  %label
    Image:
  %br
  %input{:type=>"file", :name=>"image"}
  %br
  %input.normal_input{:type => "submit",:class=>"button_margin", :value => "Add"}

